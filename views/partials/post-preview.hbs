<article class="post post-preview" itemscope itemtype="http://schema.org/BlogPosting">
    <header class="post-header">
        <a href="{{url}}" title="Read {{title}}" itemprop="url"><h1 class="post-title" itemprop="headline">{{title}}</h1></a>
        {{> post-published-date}}
    </header>

    <div itemprop="description">
        {{{preview}}}
    </div>
</article>