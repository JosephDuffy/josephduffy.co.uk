<article class="post post-full">
    <header class="post-header">
        <h1 class="post-title">{{post.title}}</h1>
        {{> post-published-date}}&nbsp;<a href="{{post.url}}" title="Permalink to {{post.title}}" class="post-permalink icon-link"><span class="sr-only"> Permalink</span></a>
    </header>

    <div class="post-content clearfix">
        {{{post.content}}}
    </div>

    <footer class="post-footer clearfix">
        {{#if post.tags}}
            <span class="post-tags">Tags: {{#each post.tags}}<a href="/tags/{{encode this}}" title="All blog posts with the {{this}} tag">{{this}}</a>{{#unless @last}}, {{/unless}}{{/each}}</span>
        {{/if}}
    </footer>
</article>