{
  "ci": {
    "collect": {
      "startServerCommand": "docker run --rm -p 80:80 josephduffy:lighthouse",
      "url": [
        "http://localhost/",
        "http://localhost/entries/2",
        "http://localhost/open-source",
        "http://localhost/yetii",
        "http://localhost/privacy",
        "http://localhost/apps",
        "http://localhost/apps/gathered",
        "http://localhost/apps/gathered/privacy",
        "http://localhost/posts",
        "http://localhost/posts/exploiting-university-security-for-my-own-convenience",
        "http://localhost/posts/partial-in-swift",
        "http://localhost/posts/partial-framework-release-1-0-0",
        "http://localhost/blog-feeds",
        "http://localhost/tags/open-source",
        "http://localhost/tags/swift"
      ]
    },
    "assert": {
      "preset": "lighthouse:recommended",
      "assertions": {
        "offscreen-images": "off",
        "uses-webp-images": "off",
        "uses-http2": "off",
        "redirects-http": "off",
        "works-offline": "off"
      }
    },
    "upload": {
      "target": "temporary-public-storage"
    }
  }
}
